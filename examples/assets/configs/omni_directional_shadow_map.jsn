{
    include: [
        common.jsn,
        post_process.jsn,
        editor_renderer.jsn
    ],
    
    render_targets:
    {
        shadow_cube:
        {
            size: [256,256],
            format: d24s8,
            type: cube
        },
        
        shadow_cube_depth:
        {
            size: [256,256],
            format: d24s8,
            type: cube
        }
    },
                
    views:
    {
        demo_main:
        {
            inherit: "main_view",
            clear_colour: [0.5, 0.5, 0.5, 1.0],
            pmfx_shader: forward_render,
            technique: point_light_shadow,
            
            sampler_bindings:
            [
                { texture: shadow_cube, unit: 14, state: wrap_linear, shader: ps }
            ],
        },
        
        omni_shadow_view:
        {
            target: [shadow_cube],
            clear_colour: [1.0, 1.0, 1.0, 1.0],
            clear_depth : 1.0,
            colour_write_mask  : 0xf,
            blend_state : disabled,
            viewport : [0.0, 0.0, 1.0, 1.0],
            raster_state : front_face_cull,
            depth_stencil_state: default,
            pmfx_shader : forward_render,
            technique : omni_shadow,
            scene : main_scene,
            camera : cam_omni_shadow,
            scene_views : ["ces_render_scene"],
            render_flags : ["forward_lit"]
        }
    },
    
    view_sets: 
    {
        omni_directional_shadow_map: [
            omni_shadow_view,
            demo_main,
            editor_view
        ]
    },
    
    view_set: omni_directional_shadow_map
}
